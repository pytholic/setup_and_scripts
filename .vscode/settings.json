{
  "cmake.configureOnOpen": false,
  "editor.fontFamily": "Comic Mono, Hack Nerd Font Mono, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontFamily": "Comic Mono, Hack Nerd Font Mono",
  "terminal.integrated.fontSize": 15,
  "editor.fontSize": 15,
  "cmake.automaticReconfigure": false,
  "cmake.configureOnEdit": false,
  "C_Cpp.intelliSenseEngine": "default",
  "editor.wordWrap": "on",
  "editor.autoClosingBrackets": "always",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.rulers": [
    80
  ],
  "autoDocstring.docstringFormat": "numpy",
  "black-formatter.args": [
    "--line-length",
    "80"
  ],
  "workbench.iconTheme": "material-icon-theme",
  "pylint.args": [
    "--max-line-length=80",
    "--disable=E1120,C0116,C0114,C0115",
  ],
  "isort.args": [
    "--profile",
    "black",
    "--filter-files", 
    "--force-grid-wrap=3"
  ],
  // Better comments
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#FAA0A0",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "@",
      "color": "#FAA0A0",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  // Language specific config 
  "[python]": {
    "editor.semanticHighlighting.enabled": false,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
  },
  "editor.lineNumbers": "relative",
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.fontWeight": "normal",
  "settingsSync.ignoredExtensions": [],
  "workbench.colorTheme": "Nord",
  "vim.easymotion": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<space>"
      ],
      "commands": [
        "vspacecode.space"
      ]
    },
    {
      "before": [
        ","
      ],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<space>"
      ],
      "commands": [
        "vspacecode.space"
      ]
    },
    {
      "before": [
        ","
      ],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    },
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    }
  ],
  "gitlens.graph.layout": "editor",
  "editor.formatOnSave": true,
  "editor.bracketPairColorization.enabled": true,
  "sync-rsync.sites": [
    {
      "localPath": "/Users/pytholic/Developer/personal/Projects/mlops/mlops-orbit",
      "remotePath": "pytholic@34.64.207.252:/home/pytholic/mlops-zoomcamp-pytholic",
      "shell": "ssh -i ~/.ssh/mlops-zoomcamp"
    },
  ],
  "sync-rsync.include": [
    ".vscode",
    ".git"
  ],
  // "sync-rsync.args": [
  //   "--rsh=ssh"
  // ],
  "sync-rsync.executableShell": "/bin/bash",
  "sync-rsync.onSave": true,
  "sync-rsync.delete": true,
  "remote.autoForwardPortsSource": "hybrid",

  // TODO Tree
  "todo-tree.general.tags": ["TODO", "FIXME", "BUG", "HACK"],
  "todo-tree.highlights.backgroundColourScheme": ["orange", "#FF8096", "green", "#89CFF0"],
  "todo-tree.highlights.useColourScheme": true,
  "todo-tree.highlights.customHighlight": {
    "TODO": {
        "gutterIcon": true
    },
    "FIXME": {
        "foreground": "white",
        "iconColour": "yellow",
        "gutterIcon": true
    },
    "BUG": {
      "icon": "bug",
      "foreground": "white",
      "gutterIcon": true
    },
    "HACK": {
      "icon": "checkbox",
      "foreground": "white",
      "gutterIcon": true
    },
  }
}
