{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/local/opt/llvm/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I",
                "/usr/local/Cellar/opencv/4.7.0_4/include/opencv4",
                "-L",
                "/usr/local/Cellar/opencv/4.7.0_4/lib",
                "-l",
                "opencv_core",
                "-l",
                "opencv_videoio",
                "-l",
                "opencv_imgproc",
                "-l",
                "opencv_highgui",
                "-l",
                "opencv_imgcodecs"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
